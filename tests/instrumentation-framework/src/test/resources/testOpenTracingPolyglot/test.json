{
  "name": "OpenTracing polyglot test",
  "environment": {
    "dockerCompose": ["../../../../app/polyglot-opentracing/docker-compose.yml", "docker-compose.yml"],
    "initWaitSeconds": "20",
    "type": "APM",
    "apmAddress": "172.16.158.1"
  },
  "tests": [
    {
      "description" : "Context propagation",
      "skip": false,
      "action": "action.sh",
      "scriptServiceName": "nodejs",
      "afterActionWaitSeconds": "20",
      "verify": {
        "jsonPath": [
          {
            "left": "$[0].traceId",
            "right": "$[1].traceId",
            "operator": "EQ"
          }, {
            "left": "$.length()",
            "right": "2",
            "operator": "EQ"
          }
        ]
      }
    }
  ]
}
